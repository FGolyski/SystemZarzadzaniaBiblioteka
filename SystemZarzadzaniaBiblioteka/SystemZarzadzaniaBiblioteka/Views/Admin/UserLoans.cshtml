@model IEnumerable<SystemZarzadzaniaBiblioteka.Models.Loan>
@{
    ViewData["Title"] = "Zwroty Użytkownika";
}

<h2>Zarządzanie wypożyczeniami</h2>
<a asp-action="Users" class="btn btn-secondary mb-3">Powrót do listy użytkowników</a>

<table class="table">
    <thead>
        <tr>
            <th>Książka</th>
            <th>Data Wypożyczenia</th>
            <th>Termin</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.LoanDate.ToShortDateString()</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>
                    @if (item.ReturnDate == null)
                    {
                        <form asp-controller="Loans" asp-action="ReturnBook" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger">Zatwierdź Zwrot</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Zwrócono: @item.ReturnDate.Value.ToShortDateString()</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>