@model SystemZarzadzaniaBiblioteka.Models.Author

@{
    ViewData["Title"] = "Edytuj Autora";
}

<h1>Edytuj Autora</h1>

<h4>Dane autora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label fw-bold"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label fw-bold"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Zapisz zmiany" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}