@model IEnumerable<SystemZarzadzaniaBiblioteka.Models.Loan>

@{
    ViewData["Title"] = "Wypożyczenia";
}

<h2>@(User.IsInRole("Admin") ? "Wszystkie Wypożyczenia" : "Moje Książki")</h2>

@if (User.IsInRole("Admin"))
{
    <form asp-action="Index" method="get" class="mb-4 p-3 bg-light border rounded">
        <label class="form-label fw-bold">Wyszukaj wypożyczenie:</label>
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Email użytkownika lub tytuł książki..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Szukaj</button>
        </div>
    </form>
}


    <p>
        <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Wypożycz nową książkę</a>
    </p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Książka</th>
            <th>Data Wypożyczenia</th>
            <th>Termin Zwrotu</th>
            <th>Status / Akcje</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Użytkownik</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.LoanDate.ToShortDateString()</td>

                <td style="@(item.DueDate < DateTime.Now && item.ReturnDate == null ? "color:red; font-weight:bold;" : "")">
                    @item.DueDate.ToShortDateString()
                </td>

                <td>
                    @if (item.ReturnDate == null)
                    {
                        <div class="d-flex gap-2 align-items-center">

                            @if (!item.IsExtended)
                            {
                                <form asp-action="Extend" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-warning btn-sm">Przedłuż (+7 dni)</button>
                                </form>
                            }
                            else
                            {
                                <button disabled class="btn btn-secondary btn-sm" title="Można przedłużyć tylko raz">Limit wykorzystany</button>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <form asp-action="ReturnBook" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Czy na pewno chcesz zatwierdzić zwrot tej książki?');">
                                        Wymuś Zwrot
                                    </button>
                                </form>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-success fw-bold">Oddano: @item.ReturnDate.Value.ToShortDateString()</span>
                    }
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>@item.User.Email</td>
                }
            </tr>
        }
    </tbody>
</table>